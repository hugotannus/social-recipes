<%= form_for @recipe do |f| %>
  <div class="form-group">
    <%= f.label :title, 'TÃ­tulo' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :picture, 'Foto' %>
    <div class="input-group">
      <span class="input-group-addon">
        <%= fa_icon 'image lg' %>
      </span>
      <%= f.file_field :picture, class: 'form-control' %>
      <span class="input-group-addon">.jpg .jpeg .gif ou .png</span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cuisine_id, 'Cozinha' %>
    <%= f.collection_select :cuisine_id,
        @cuisines, :id, :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :kind_id, 'Tipo de receita' %>
    <%= f.collection_select :kind_id, @kinds, :id, :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :portions, 'Rendimento' %>
    <%= f.number_field :portions, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :prep_time, 'Tempo de preparo' %>
    <div class="input-group">
      <%= f.number_field :prep_time, class: 'form-control' %>
      <span class="input-group-addon">minutos</span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :difficulty, 'Dificuldade'%>
    <%= f.select :difficulty  do %>
      <% Recipe.difficulties.each do |d| %>
        <%= content_tag(:option, d.first, value: d.first) %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, 'Ingredientes' %>
    <%= f.text_area :ingredients, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :directions, 'Modo de preparo' %>
    <%= f.text_area :directions, class: 'form-control' %>
  </div>


  <div class="actions form-group">
    <%= f.button class:'btn btn-success' do %>
      <%= fa_icon yield(:fa_icon), text: yield(:button_text) %>
    <% end %>
  </div>
<% end %>
