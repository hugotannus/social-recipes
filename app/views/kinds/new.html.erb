<% provide(:title, 'Novo tipo de receita') %>
<section>

  <h2>Novo Tipo de Receita</h2>

  <hr>

  <%= form_for @kind do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="actions form-group">
      <%= f.button class:'btn btn-success' do %>
        <%= fa_icon 'plus lg', text: 'Criar Tipo de Receita' %>
      <% end %>
    </div>
  <% end %>

</section>
